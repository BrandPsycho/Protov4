﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/recursos/miku.ico">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Producto.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Carrito.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AcercaDe.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/FinalizarCompra.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css" rel="stylesheet" />


    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <link rel="stylesheet" href="~/css/Fuentes.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar-custom">
            <div class="logo">
            <a   asp-area="" asp-controller="Home" asp-action="Index">
           
                <img src="~/recursos/Miku_logo.png" alt="Logo de MIKUTECH" >
                <h1>MIKUTECH</h1>
            
            </a></div>
            <div class="botonera">
                <ul class="navbar-nav-custom">
                    <li class="nav-item-custom">
                        <a class="nav-link-custom"  asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="dropdown" style="z-index:100">
                        <a class="nav-link-custom" asp-area="" asp-controller="Producto" asp-action="Producto">Tienda</a>
                        <div class="dropdown-content">
                            <a class="nav-link text-white elementodrop" onclick="window.location.href='@Url.Action("Producto", "Producto", new { tipo = "Procesador" })'">Procesadores</a>
                            <a class="nav-link text-white elementodrop" onclick="window.location.href='@Url.Action("Producto", "Producto", new { tipo = "Gráfica" })'">Gráficas</a>
                            <a class="nav-link text-white elementodrop" onclick="window.location.href='@Url.Action("Producto", "Producto", new { tipo = "Placa" })'">Placas Base</a>
                            <a class="nav-link text-white elementodrop" onclick="window.location.href='@Url.Action("Producto", "Producto", new { tipo = "Ram" })'">Memorias Ram</a>
                            <a class="nav-link text-white elementodrop" onclick="window.location.href='@Url.Action("Producto", "Producto", new { tipo = "Almacenamiento" })'">Almacenamiento</a>
                            <a class="nav-link text-white elementodrop" onclick="window.location.href='@Url.Action("Producto", "Producto", new { tipo = "Fuente" })'">Fuentes de Poder</a>
                        </div>
                    </li>
                    <li class="nav-item-custom">
                        <a class="nav-link-custom" asp-area="" asp-controller="Carrito" asp-action="Carrito">Carrito</a>
                    </li>
                    <li class="nav-item-custom">
                        <a class="nav-link-custom" asp-area="" asp-controller="Home" asp-action="AcercaDe">Acerca de</a>
                    </li>
                    <li class="nav-item-custom">
                        <a class="nav-link-custom" asp-area="" asp-controller="Home" asp-action="MiCuenta">Mi cuenta</a>
                    </li>
                    <li class="nav-item-custom">
                        <a class="nav-link-custom-btn" asp-area="" asp-controller="Acceso" asp-action="Logout">Cerrar sesión</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.js"></script>

</body>
</html>