<!--Creacion de la vista de admin-->
<!--Las siguientes líneas son solo html-->
@{
    Layout = null;
}



<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/adminsts.css">
    <title>Admin</title>
</head>
<body>
    <div class="contenedor-header">
        <header>
            <div class="logo">
                <img src="~/recursos/Miku_logo.png" alt="Logo de MIKUTECH">
                <h1>MIKUTECH ADMIN</h1>
            </div>
            <nav id="nav">
                <ul>
                    <li><a href="#productos">Productos</a></li>
                    <li><a href="#pedidos">Pedidos</a></li>
                    <li><a href="#auditoria">Auditoria</a></li>
                    <li><button class="btn-salir">Salir</button></li>
                </ul>
            </nav>
        </header>
    </div>

    <section class="tabla">
        <div class="contenido-seccion">
            <div class="contenedor-titulo">
                <h2>LISTADO DE PRODUCTOS</h2>
            </div>
        </div>
    </section>
    <div class="herramientas">
        <div class="btn-Crear">
            <a asp-action="Create">Agregar nuevo producto</a>
        </div>
    </div>
    <div class="contenedor-tabla">
        <table class="tabla-productos">
            <thead>
                <tr>
                    <th>
                        N°
                    </th>
                    <th>
                        Id Producto
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Precio
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <!--Esto toca cambiar por el modelo-->
                @*@foreach (var item in Model){*@
                    <tr>
                        <td>
                            1
                        </td>
                        <td>
                            147854E47
                        </td>
                        <td>
                            Teclado Mecánico
                        </td>
                        <td>
                            $14,00
                        </td>
                        <td>
                            <!--Falta validar con los datos-->
                            <a asp-action="Edit">Editar</a> 
                            <a asp-action="Details">Detalles</a> 
                            <a asp-action="Delete">Eliminar</a> 
                        </td>
                    </tr>
                @*}*@
            </tbody>
        </table>
    </div>
</body>
</html>