<!--Creacion de la vista de admin-->
<!--Las siguientes líneas son solo html-->
@model Protov4.DTO.ProductoDTO
@*@{
    Layout = null;
}*@

<html lang="en"> <!--Idioma que permite la pagina-->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/adminsts.css"> <!--Toma de referencia la hoja de estilos en la carpeta css con el archivo adminsts.css-->
    <title>Admin</title> <!--El titulo de la ventana-->
</head>
<body> <!--Comienza el cuerpo-->
    <div class="contenedor-header"> <!--Contenedor del encabezado de la pagina-->
        <header>
            <div class="logo"> <!--Contenedor para el logo-->
                <img src="~/recursos/Miku_logo.png" alt="Logo de MIKUTECH">
                <h1>MIKUTECH ADMIN</h1>
            </div>
            <nav id="nav"> <!--Declara un nav-->
                <ul> <!--Lista de las opciones del nav-->
                    <li><a href="#productos">Productos</a></li>
                    @*<li><a href="#pedidos">Pedidos</a></li>
                    <li><a href="#auditoria">Auditoria</a></li>*@
                    <li><button class="btn-salir">Salir</button></li>
                </ul>
            </nav>
        </header>
    </div>
    <div class="lista-productos"> <!--Contenedor para el el titulo del listado del producto-->
        <div class="titulo">
            <div class="contenedor-titulo">
                <h2>LISTADO DE PRODUCTOS</h2>
                <i class="bi bi-arrow-clockwise"></i>
            </div>
        </div>
        <div class="contenedor-buscar"> <!--Contenedor para la herramienta de busqueda-->
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Buscar Producto"> <!--Asignacion de espacio para el buscar-->
                <i class="bi bi-search"></i>
            </form>
        </div>

        <div class="herramientas">
            <div class="btn-Crear">
                <a asp-action="Create">Agregar nuevo producto</a> <!--Action que se hace al momento de dar clic en crear-->
            </div>
        </div>

        <div class="contenedor-tabla"> <!--Contenedor de la tabla para la lista de los productos-->
            <table class="tabla-productos">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Nombre producto
                        </th>
                        <th>
                            Precio
                        </th>
                        <th>
                            Marca
                        </th>
                        <th>
                            Existencia
                        </th>
                    </tr>
                </thead>
                <tbody> <!--Espacio del contenido de la tabla-->
                    
                    <tr>
                        <td>
                                Id
                        </td>
                        <td>
                                Nombre_Producto
                        </td>
                        <td>
                                Precio
                        </td>
                        <td>
                                Marca
                        </td>
                        <td>
                                Existencia
                        </td>
                        <td> <!--Botones con las acciones para el crud como editar, detalles, eliminar-->
                            <a class="btn-Editar" asp-action="Edit">Editar</a>
                            <a class="btn-Detalles" asp-action="Details">Detalles</a>
                            <a class="btn-Eliminar" asp-action="Delete">Eliminar</a>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>