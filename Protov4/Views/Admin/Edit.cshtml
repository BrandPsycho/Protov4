@model Protov4.DTO.ProductoDTO

<!--Creacion de la vista de admin-->
<!--Las siguientes líneas son solo html-->
@{
    Layout = null;
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/adminsts.css">
    <title>Admin</title>
</head>
<body>
    <div class="contenedor-header">
        <header>
            <div class="logo">
                <img src="~/recursos/Miku_logo.png" alt="Logo de MIKUTECH">
                <h1>MIKUTECH</h1>
            </div>
            <nav id="nav">
                <ul>
                    <li><a href="#productos">Productos</a></li>
                    <li><a href="#pedidos">Pedidos</a></li>
                    <li><a href="#auditoria">Auditoria</a></li>
                    <li><button class="btn-salir">Salir</button></li>
                </ul>
            </nav>
        </header>
    </div>


    <section class="productos">
        <div class="contenido-seccion">
            <div class="titulo-editar">
                <h1>¡Alerta!</h1>
                <h3>Editará el producto seleccionado</h3>
            </div>

            <div class="fila">
                <div class="columna">
                    <label for="idProducto">ID del Producto:</label>
                    <input type="text" name="idProducto" id="idProducto">
                </div>
                <div class="columna">
                    <label for="nombreProducto">Nombre del Producto:</label>
                    <input type="text" name="nombreProducto" id="nombreProducto">
                </div>
                <div class="columna">
                    <label for="precioProducto">$ Precio:</label>
                    <input type="text" name="precioProducto" id="precioProducto">
                </div>
                <div class="columna">
                    <label for="precioProducto">Marca del Producto:</label>
                    <input type="text" name="precioProducto" id="precioProducto">
                </div>
                <div class="columna">
                    <label for="precioProducto">Existencias:</label>
                    <input type="text" name="precioProducto" id="precioProducto">
                </div>
            </div>

            <div class="contenedor-editar">
                <button type="button" class="btn-Editar">Editar</button>
                <button type="button" class="cancelar-btn">Cancelar</button>
            </div>
        </div>
    </section>

</body>
</html>